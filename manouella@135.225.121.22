services:
  backend:
    build: backend
    depends_on:
      database:
        condition: service_healthy
    environment:
      - PGURI=postgres://postgres:@database/postgres
    ports:
      - "3000:3000"
  database:
    environment:
      - POSTGRES_PASSWORD=
    healthcheck:
      interval: 1s
      test: "pg_isready --username=postgres"
    image: postgres
    volumes:
      - ./data:/var/lib/postgresql/data
      # - ./postgres.sql:/docker-entrypoint-initdb.d/postgres.
